# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=cloud_rbac
DB_USERNAME=root
DB_PASSWORD=

# JWT Configuration
JWT_SECRET=your-secret-key-change-this-in-production

# Application Configuration
APP_NAME=Cloud Services RBAC
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_LIFETIME=1440

# Email Configuration (for password reset, etc.)
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Logging
LOG_LEVEL=info
LOG_PATH=/var/log/rbac.log

# Cache Configuration
CACHE_DRIVER=file
CACHE_TTL=3600

# API Configuration
API_VERSION=v1
API_PREFIX=/api